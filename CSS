    border: 1px solid black;
}

/* Desktop view */
@media (min-width: 992px) {
    .section {
        width: 33.33%; /* Each section takes up equal space in the row */
        float: left;
    }
}

/* Tablet view */
@media (min-width: 768px) and (max-width: 991px) {
    .section {
        width: 50%; /* Two sections side by side */
        float: left;
    }

    .section:nth-child(3) {
        width: 100%; /* Third section takes up entire row */
        float: none;
    }
}

/* Mobile view */
@media (max-width: 767px) {
    .section {
        width: 100%; /* Each section takes up the entire row */
        float: none;
    }
}

